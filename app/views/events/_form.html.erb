  <%= simple_form_for(@event) do | f | %>
  <%= f.error_notification %>
          <%= f.input :name,
                      label: 'Event Name',
                      input_html: { class: 'input' },
                      wrapper: false, label_html: { class: 'label' },
                      required: true,
                      autofocus: true %>


          <%= f.input :location,
                      label: 'Event Location',
                      input_html: { class: 'input' },
                      wrapper: false, label_html: { class: 'label' },
                      required: true %>

          <%= f.input :date,
                      label: 'Date & Time',
                      input_html: { class: 'datetime' },
                      wrapper: false, label_html: { class: 'label' },
                      required: true %>

          <%= f.input :private,
                      label: 'Private Event',
                      input_html: { class: 'checkbox' },
                      wrapper: false, label_html: { class: 'label' } %>

          <%= f.input :description,
                      label: 'Event Description',
                      input_html: { class: 'textarea' },
                      wrapper: false, label_html: { class: 'label' },
                      placeholder: 'Tell us about your event...' %>


  <%= f.button :submit, class: 'button' %>
  <% end %>
